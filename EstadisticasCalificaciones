import javax.swing.JOptionPane;

public class EstadisticasCalificaciones {
    public static void main(String[] args) {
        int n = Integer.parseInt(
            JOptionPane.showInputDialog("¿Cuántas calificaciones deseas ingresar?")
        );

        double[] calificaciones = new double[n];
        double suma = 0;
        double max = 0, min = 0;

        for (int i = 0; i < n; i++) {
            calificaciones[i] = Double.parseDouble(
                JOptionPane.showInputDialog("Ingresa la calificación " + (i + 1) + ":")
            );
            suma += calificaciones[i];

            if (i == 0) { // inicializar min y max con la primera calificación
                max = calificaciones[i];
                min = calificaciones[i];
            } else {
                if (calificaciones[i] > max) max = calificaciones[i];
                if (calificaciones[i] < min) min = calificaciones[i];
            }
        }

        double promedio = suma / n;

        StringBuilder resultado = new StringBuilder("=== CALIFICACIONES ===\n");
        for (double c : calificaciones) {
            resultado.append(c).append("  ");
        }
        resultado.append("\nPromedio: ").append(promedio);
        resultado.append("\nCalificación máxima: ").append(max);
        resultado.append("\nCalificación mínima: ").append(min);

        JOptionPane.showMessageDialog(null, resultado.toString());
    }
}


